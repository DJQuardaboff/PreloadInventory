<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.porterlee.preloadinventory.PreloadInventoryActivity">

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/column_titles">

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:id="@+id/progress_saving"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:max="320"
            app:mpb_useIntrinsicPadding="false"
            app:mpb_progressStyle="horizontal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/location_list_view"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="96dp"
            android:layoutAnimation="@anim/layout_animation"
            android:background="@drawable/inventory_location_rounded_recycler"/>

        <LinearLayout
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/items_scanned_title_string"
                    android:paddingEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="#FFFFFF"
                    tools:ignore="RtlSymmetry"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:id="@+id/items_scanned"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/items_misplaced_title_string"
                    android:paddingEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="#FFFFFF"
                    tools:ignore="RtlSymmetry"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:id="@+id/items_misplaced"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:id="@+id/column_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:textColor="#7FFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/info_layout"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="60dp"
        android:clipToPadding="false"
        android:layoutAnimation="@anim/layout_animation"
        app:layout_constraintTop_toBottomOf="@id/column_titles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/random_scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_list_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Random Scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
